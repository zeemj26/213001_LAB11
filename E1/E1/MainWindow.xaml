<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E1"
        mc:Ignorable="d"
        Title="MainWindow" Height="448" Width="556">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "1*"/>
            <RowDefinition Height = "1*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation = "Horizontal">
            <Image Width = "200"  VerticalAlignment = "Top" Margin = "30" Source="/mountain.jpg" />
            <Image Width = "200"  VerticalAlignment = "Top" Margin = "30" Opacity = "0.5" Source="/mountain.jpg" />
        </StackPanel>

        <StackPanel Grid.Row = "1">

            <Ellipse Height = "100" Width = "200" HorizontalAlignment = "Center" Margin = "30">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/lake.jpg"  />
                </Ellipse.Fill>
            </Ellipse>

        </StackPanel>
    </Grid>
</Window>
